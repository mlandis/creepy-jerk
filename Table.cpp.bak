#include "Table.h"

Table::Table(std::list<Table*>* tp)
{
	tablePtr = tp;
}

Table::~Table(void) {

}

void Table::removePatron(void)
{
	patrons.pop_front();
	if (patrons.size() == 0)
	{
		tablePtr->remove(this);
		delete this;
	}
}

void Table::seatPatron(Patron* p)
{
	patrons.push_back(p);
}

void Table::print(void)
{
	for (std::list<Patron*>::iterator it_i = patrons.begin(); it_i != patrons.end(); it_i++)
	{
		std::cout << "patron\n";
		for (int i = 0; i < (*it_i)->getData().size(); i++)
		{
			for (int j = 0; j < ((*it_i)->getData())[i].size(); j++)
			{
				std::cout << ((*it_i)->getData())[i][j] << "\t";
			}
			std::cout << "\n";
		}
		std::cout << "\n";
	}
}
